@page "/"
@inject NavigationManager Navigation

<PageTitle>Mud - Login</PageTitle>

<div class="auth-container">
    <h1>Mud</h1>
    <p class="subtitle">A retro-futuristic ASCII MMO</p>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="error-message">@ErrorMessage</div>
    }

    <div class="auth-tabs">
        <a href="/" class="@(ActiveTab == "login" ? "active" : "")">Login</a>
        <a href="/?tab=register" class="@(ActiveTab == "register" ? "active" : "")">Register</a>
    </div>

    @if (ActiveTab == "login")
    {
        <form method="post" action="/api/auth/login">
            <input type="hidden" name="__RequestVerificationToken" value="@AntiforgeryToken" />
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required />
            </div>
            <button type="submit" class="submit-btn">Enter Game</button>
        </form>
    }
    else
    {
        <form method="post" action="/api/auth/register">
            <input type="hidden" name="__RequestVerificationToken" value="@AntiforgeryToken" />
            <div class="form-group">
                <label for="reg-username">Username</label>
                <input type="text" id="reg-username" name="username" required minlength="3" />
            </div>
            <div class="form-group">
                <label for="reg-password">Password</label>
                <input type="password" id="reg-password" name="password" required minlength="4" />
            </div>
            <div class="form-group">
                <label for="reg-confirm">Confirm Password</label>
                <input type="password" id="reg-confirm" name="confirmPassword" required />
            </div>
            <button type="submit" class="submit-btn">Create Account</button>
        </form>
    }
</div>

<style>
    .auth-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 40px;
        background: #1a1a2e;
        border: 2px solid #16213e;
        border-radius: 8px;
        font-family: monospace;
        color: #e0e0e0;
    }

    h1 {
        text-align: center;
        color: #00ff88;
        margin-bottom: 5px;
        font-size: 48px;
    }

    .subtitle {
        text-align: center;
        color: #888;
        margin-bottom: 30px;
    }

    .auth-tabs {
        display: flex;
        margin-bottom: 20px;
    }

    .auth-tabs a {
        flex: 1;
        padding: 10px;
        background: #16213e;
        border: none;
        color: #888;
        cursor: pointer;
        font-family: monospace;
        font-size: 16px;
        text-decoration: none;
        text-align: center;
    }

    .auth-tabs a.active {
        background: #0f3460;
        color: #00ff88;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #00ff88;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        background: #16213e;
        border: 1px solid #0f3460;
        border-radius: 4px;
        color: #e0e0e0;
        font-family: monospace;
        font-size: 16px;
        box-sizing: border-box;
    }

    .form-group input:focus {
        outline: none;
        border-color: #00ff88;
    }

    .submit-btn {
        width: 100%;
        padding: 15px;
        background: #00ff88;
        border: none;
        border-radius: 4px;
        color: #1a1a2e;
        font-family: monospace;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
    }

    .submit-btn:hover {
        background: #00cc6a;
    }

    .error-message {
        background: #ff4444;
        color: white;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 20px;
        text-align: center;
    }
</style>

@code {
    [SupplyParameterFromQuery(Name = "tab")]
    public string? Tab { get; set; }

    private string ActiveTab => Tab == "register" ? "register" : "login";

    [SupplyParameterFromQuery]
    public string? ErrorMessage { get; set; }

    [CascadingParameter]
    public HttpContext? HttpContext { get; set; }

    private string? AntiforgeryToken => HttpContext?.RequestServices
        .GetService<Microsoft.AspNetCore.Antiforgery.IAntiforgery>()?
        .GetAndStoreTokens(HttpContext).RequestToken;

    protected override void OnInitialized()
    {
        // Redirect to game if already authenticated
        if (HttpContext?.User?.Identity?.IsAuthenticated == true)
        {
            Navigation.NavigateTo("/Game", forceLoad: true);
        }
    }
}
